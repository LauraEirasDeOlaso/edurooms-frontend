<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- ScrollView con contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TARJETA DE DATOS DE LA RESERVA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/surface">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/datos_de_la_reserva"
                        style="@style/TextHeading2"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/aulaNombreText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/aula"
                        style="@style/TextHeading2"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/fechaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fecha"
                        style="@style/TextBody"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/horaText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/horario"
                        style="@style/TextBody"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/estadoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/estado"
                        style="@style/TextBody"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BOTONES DE ACCIÃ“N -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Fila 1: Cancelar / Reactivar / Editar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <Button
                        android:id="@+id/cancelarButton"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/cancelar"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/error"
                        android:textColor="@color/white"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/reactivarButton"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/reactivar"
                        android:layout_marginEnd="8dp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/editarButton"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="@string/editar" />

                </LinearLayout>

                <!-- Fila 2: Traspasar -->
                <Button
                    android:id="@+id/traspasoButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="@string/traspasar_a_otra_aula"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>