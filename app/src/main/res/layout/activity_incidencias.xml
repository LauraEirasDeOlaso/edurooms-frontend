<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incidencias"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reportar_nueva_incidencia"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/descripcionInput"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/descripci_n_del_problema"
        android:inputType="textMultiLine"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext" />

    <EditText
        android:id="@+id/tipoInput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/tipo_electrica_informatica_etc"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_edittext" />

    <Button
        android:id="@+id/reportarButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/reportar_incidencia"
        android:textSize="14sp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/incidencias_registradas"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <ListView
        android:id="@+id/incidenciasListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>