<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- AppBar/Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- Contenido scrolleable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incidencias"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"
                android:textColor="@color/primary" />

            <!-- Reportar nueva -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reportar_nueva_incidencia"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- Selector de Aula -->
            <Spinner
                android:id="@+id/aulasSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="15dp" />

            <EditText
                android:id="@+id/descripcionInput"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="@string/descripci_n_del_problema"
                android:inputType="textMultiLine"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_edittext" />

            <Spinner
                android:id="@+id/tipoSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:entries="@array/tipos_incidencia" />

            <Button
                android:id="@+id/reportarButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/reportar_incidencia"
                android:textSize="14sp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/primary" />

            <!-- Incidencias registradas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/incidencias_registradas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/primary" />

            <ListView
                android:id="@+id/incidenciasListView"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>