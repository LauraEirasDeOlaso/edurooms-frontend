<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:background="@color/background">

    <!-- TÃ­tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_reserva"
        style="@style/TextHeading1"
        android:layout_marginBottom="20dp" />

    <!-- Calendario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_una_fecha"
        style="@style/TextBody"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="20dp" />

    <!-- Estado de horarios -->
    <TextView
        android:id="@+id/horariosDisponiblesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cargando_horarios"
        style="@style/TextBody"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario"
            style="@style/TextBody"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/actualizarButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="@string/actualizar" />

    </LinearLayout>

    <!-- Spinner de horarios -->
    <Spinner
        android:id="@+id/spinnerHorarios"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="25dp" />

    <!-- Botones -->
    <Button
        android:id="@+id/confirmarButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/confirmar_reserva"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/cancelarButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/cancelar"
        android:textColor="@color/text_primary"
        android:backgroundTint="@color/primary_soft"/>

</LinearLayout>
