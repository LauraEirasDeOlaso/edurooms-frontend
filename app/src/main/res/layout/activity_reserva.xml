<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- TÃTULO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crear_reserva"
        style="@style/TextHeading1"
        android:padding="20dp"
        android:layout_marginBottom="10dp" />

    <!-- CALENDARIO -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selecciona_una_fecha"
        style="@style/TextBody"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginBottom="10dp" />

    <!-- TEXTO HORARIOS -->
    <TextView
        android:id="@+id/horariosDisponiblesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cargando_horarios"
        style="@style/TextBody"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- CABECERA HORARIOS -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/horario"
            style="@style/TextBody"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/actualizarButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:text="@string/actualizar" />
    </LinearLayout>

    <!-- ðŸ”¥ RECYCLERVIEW (EL SCROLL DE LA PANTALLA) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/horariosRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="20dp" />

    <!-- BOTONES FIJOS ABAJO -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/confirmarButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/confirmar_reserva"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/cancelarButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/cancelar"
            android:textColor="@color/text_primary"
            android:backgroundTint="@color/primary_soft" />
    </LinearLayout>

</LinearLayout>
