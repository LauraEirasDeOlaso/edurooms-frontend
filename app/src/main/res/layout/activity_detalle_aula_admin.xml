<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- ScrollView con contenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TARJETA DE DATOS DEL AULA -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@color/surface">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/datos_del_aula"
                        style="@style/TextHeading2"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/nombreText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/capacidadText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/ubicacionText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextBody"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/estadoText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/TextBody" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- BOTONES -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editarButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="@string/editar"
                    android:layout_marginEnd="8dp"/>

                <Button
                    android:id="@+id/eliminarButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="@string/eliminar"
                    style="@style/ButtonDanger"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>