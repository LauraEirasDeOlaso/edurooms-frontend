<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- Contenido scrolleable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Aula -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aula"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/aulaText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@color/surface" />

            <!-- Usuario -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/usuarioText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@color/surface" />

            <!-- DescripciÃ³n -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripci_n_del_problema"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/descripcionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@color/surface"
                android:minHeight="80dp" />

            <!-- Tipo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo:"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/tipoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@color/surface" />

            <!-- Estado (solo lectura) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/estado"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <TextView
                android:id="@+id/estadoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextBody"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                android:background="@color/surface" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>