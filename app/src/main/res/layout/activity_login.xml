<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@color/background"
    android:fitsSystemWindows="true">

    <!-- CardView para sombra y bordes redondeados -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/surface">

        <!-- Contenido principal de login -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <!-- Título usa TextHeading1-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/inicio_de_sesion"
                style="@style/TextHeading1"
                android:layout_marginBottom="8dp" />

            <!-- Subtítulo usa TextHeading2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/accede_a_tu_cuenta_para_continuar"
                android:textSize="14sp"
                style="@style/TextHeading2"
                android:layout_marginBottom="25dp" />

            <!-- Label: Correo electrónico: usa TextCaption-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/correo_electronico"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <!-- Email Input: hereda CustomEditText del tema global -->
            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/introduce_tu_correo"
                android:inputType="textEmailAddress"
                android:autofillHints="emailAddress"
                android:layout_marginBottom="18dp" />

            <!-- Label: Contraseña: usa TextCaption -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contrasena"
                style="@style/TextBody"
                android:textStyle="bold"
                android:layout_marginBottom="6dp" />

            <!-- Password Input (con layout relativo para el ojito) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="18dp">

                <EditText
                    android:id="@+id/passwordInput"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/introduce_tu_contrasena"
                    android:inputType="textPassword"
                    android:autofillHints="password"
                    android:paddingStart="12dp"
                    android:paddingEnd="40dp" />

                <!-- Icono ojo para mostrar/ocultar contraseña -->
                <ImageView
                    android:id="@+id/passwordToggle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical|end"
                    android:padding="8dp"
                    android:src="@drawable/ic_visibility_off"
                    android:contentDescription="@string/mostrar_ocultar_contrasena"
                    app:tint="@color/icon" />

            </FrameLayout>

            <!-- Checkbox: Recuérdame -->
            <CheckBox
                android:id="@+id/rememberMeCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:minHeight="48dp"
                android:text="@string/recuerdame"
                android:textColor="@color/text_secondary"
                android:textSize="13sp"
                android:layout_marginBottom="20dp"
                android:gravity="center_vertical" />

            <!-- Botón Login: hereda CustomButton (texto blanco sobre beige) -->
            <Button
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/iniciar_sesion"
                style="@style/ButtonMainMenu"
                android:layout_marginBottom="12dp" />

            <!-- Link: Olvidaste contraseña: usa  -->
            <TextView
                android:id="@+id/recuperarPasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/olvidaste_tu_contrasena"
                style="@style/TextBody"
                android:textColor="@color/primary_dark"
                android:gravity="center"
                android:padding="8dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>