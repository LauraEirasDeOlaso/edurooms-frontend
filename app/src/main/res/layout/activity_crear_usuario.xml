<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Include Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- Contenedor de scroll para el contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/crear_nuevo_usuario"
                style="@style/TextHeading1"
                android:layout_marginBottom="25dp" />

            <!-- CardView con formulario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/surface">

                    <!-- Label: Nombre -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nombre_completo"
                        style="@style/TextBody"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <!-- Nombre Input -->
                    <EditText
                        android:id="@+id/nombreInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="@string/ej_juan_garcia"
                        style="@style/CustomEditText"
                        android:inputType="text"
                        android:autofillHints="name"
                        android:layout_marginBottom="18dp" />

                    <!-- Label: Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email"
                        style="@style/TextBody"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <!-- Email Input -->
                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        style="@style/CustomEditText"
                        android:hint="@string/correo_instituto_com"
                        android:inputType="textEmailAddress"
                        android:autofillHints="emailAddress"
                        android:layout_marginBottom="18dp" />

                    <!-- Label: Departamento -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/departamento"
                        style="@style/TextBody"
                        android:layout_marginBottom="6dp" />

                    <!-- Departamento Input -->
                    <EditText
                        android:id="@+id/departamentoInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        style="@style/CustomEditText"
                        android:hint="@string/ej_matem_ticas_ingl_s_etc"
                        android:inputType="text"
                        android:autofillHints="none"
                        android:layout_marginBottom="20dp" />

                    <!-- Botón Crear Usuario -->
                    <Button
                        android:id="@+id/crearUsuarioButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/crear_usuario" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView para mostrar resultado (password temporal) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/resultadoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary_soft">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/usuario_creado_exitosamente"
                        style="@style/TextHeading2"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contrase_a_temporal"
                        style="@style/TextCaption"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/passwordTemporalText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/password_oculto"
                            style="@style/TextBody"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/copiarPasswordButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/copiar" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/comunica_esta_contrase_a_al_usuario_de_forma_segura"
                        style="@style/TextCaption"
                        android:textColor="@color/warning"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (fija abajo) -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>