<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Include Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- Contenedor de scroll para el contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crear Nuevo Usuario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="25dp" />

            <!-- CardView con formulario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/surface">

                    <!-- Label: Nombre -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nombre Completo"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="6dp" />

                    <!-- Nombre Input -->
                    <EditText
                        android:id="@+id/nombreInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Ej: Juan García"
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_muted"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_marginBottom="18dp" />

                    <!-- Label: Email -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="6dp" />

                    <!-- Email Input -->
                    <EditText
                        android:id="@+id/emailInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="correo@instituto.com"
                        android:inputType="textEmailAddress"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_muted"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_marginBottom="18dp" />

                    <!-- Label: Departamento -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Departamento"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="6dp" />

                    <!-- Departamento Input -->
                    <EditText
                        android:id="@+id/departamentoInput"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:hint="Ej: Matemáticas, Inglés, etc."
                        android:inputType="text"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/text_primary"
                        android:textColorHint="@color/text_muted"
                        android:textSize="14sp"
                        android:background="@drawable/rounded_edittext"
                        android:layout_marginBottom="20dp" />

                    <!-- Botón Crear Usuario -->
                    <Button
                        android:id="@+id/crearUsuarioButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Crear Usuario"
                        android:textColor="@color/text_on_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@color/primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- CardView para mostrar resultado (password temporal) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/resultadoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary_soft">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✅ Usuario Creado Exitosamente"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contraseña Temporal:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/passwordTemporalText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="••••••••"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/copiarPasswordButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copiar"
                            android:textSize="12sp"
                            android:backgroundTint="@color/primary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="⚠️ Comunica esta contraseña al usuario de forma segura"
                        android:textSize="11sp"
                        android:textColor="@color/warning"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (fija abajo) -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>