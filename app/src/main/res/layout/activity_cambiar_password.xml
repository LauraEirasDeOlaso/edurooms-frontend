<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- ScrollView con contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Título -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cambiar Password"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="25dp" />

            <!-- CardView con formulario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/surface">

                    <!-- Password Actual (solo si no es primera vez) -->
                    <LinearLayout
                        android:id="@+id/passwordActualContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Password Actual"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="6dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="18dp">

                            <EditText
                                android:id="@+id/passwordActualInput"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Ingresa tu password actual"
                                android:inputType="textPassword"
                                android:paddingStart="12dp"
                                android:paddingEnd="40dp"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_muted"
                                android:textSize="14sp"
                                android:background="@drawable/rounded_edittext" />

                            <ImageView
                                android:id="@+id/passwordActualToggle"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical|end"
                                android:padding="8dp"
                                android:src="@drawable/ic_visibility_off"
                                android:contentDescription="Mostrar/ocultar contraseña"
                                app:tint="@color/icon" />

                        </FrameLayout>

                    </LinearLayout>

                    <!-- Password Nueva -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password Nueva"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="6dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="18dp">

                        <EditText
                            android:id="@+id/passwordNuevaInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Ingresa tu nueva password"
                            android:inputType="textPassword"
                            android:paddingStart="12dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_muted"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_edittext" />

                        <ImageView
                            android:id="@+id/passwordNuevaToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical|end"
                            android:padding="8dp"
                            android:src="@drawable/ic_visibility_off"
                            android:contentDescription="Mostrar/ocultar contraseña"
                            app:tint="@color/icon" />

                    </FrameLayout>

                    <!-- Confirmar Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar Password"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="6dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="18dp">

                        <EditText
                            android:id="@+id/passwordConfirmarInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Confirma tu nueva password"
                            android:inputType="textPassword"
                            android:paddingStart="12dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_muted"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_edittext" />

                        <ImageView
                            android:id="@+id/passwordConfirmarToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical|end"
                            android:padding="8dp"
                            android:src="@drawable/ic_visibility_off"
                            android:contentDescription="Mostrar/ocultar contraseña"
                            app:tint="@color/icon" />

                    </FrameLayout>

                    <!-- Requisitos de password -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requisitos:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/req_minimo8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Minimo 8 caracteres"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_mayuscula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Al menos 1 mayuscula"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_minuscula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Al menos 1 minuscula"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_numero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Al menos 1 numero"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_especial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="✓ Al menos 1 caracter especial (@, #, $, %, !, &amp;, *)"
                        android:textSize="11sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginBottom="16dp" />

                    <!-- Boton Guardar -->
                    <Button
                        android:id="@+id/guardarPasswordButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Guardar Password"
                        android:textColor="@color/text_on_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@color/primary" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>