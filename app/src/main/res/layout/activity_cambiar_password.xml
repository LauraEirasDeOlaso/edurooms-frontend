<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- ScrollView con contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- TÃ­tulo: : usa TextHeading1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cambiar_password"
                android:textSize="22sp"
                style="@style/TextHeading1"
                android:layout_marginBottom="25dp" />

            <!-- CardView con formulario -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@color/surface">

                    <!-- Password Actual (solo si no es primera vez) -->
                    <LinearLayout
                        android:id="@+id/passwordActualContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/password_actual"
                            style="@style/TextCaption"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginBottom="18dp">

                            <EditText
                                android:id="@+id/passwordActualInput"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="@string/ingresa_tu_password_actual"
                                android:inputType="textPassword"
                                android:autofillHints="password"
                                android:paddingStart="12dp"
                                android:paddingEnd="40dp"
                                android:textColor="@color/text_primary"
                                android:textColorHint="@color/text_muted"
                                android:textSize="14sp"
                                android:background="@drawable/rounded_edittext" />

                            <ImageView
                                android:id="@+id/passwordActualToggle"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_vertical|end"
                                android:padding="8dp"
                                android:src="@drawable/ic_visibility_off"
                                android:contentDescription="@string/mostrar_ocultar_contrasena"
                                app:tint="@color/icon" />

                        </FrameLayout>

                    </LinearLayout>

                    <!-- Password Nueva -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password_nueva"
                        style="@style/TextBody"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="18dp">

                        <EditText
                            android:id="@+id/passwordNuevaInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/ingresa_tu_nueva_password"
                            android:inputType="textPassword"
                            android:autofillHints="password"
                            android:paddingStart="12dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_muted"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_edittext" />

                        <ImageView
                            android:id="@+id/passwordNuevaToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical|end"
                            android:padding="8dp"
                            android:src="@drawable/ic_visibility_off"
                            android:contentDescription="@string/mostrar_ocultar_contrasena"
                            app:tint="@color/icon" />

                    </FrameLayout>

                    <!-- Confirmar Password -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/confirmar_password"
                        style="@style/TextBody"
                        android:textStyle="bold"
                        android:layout_marginBottom="6dp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="18dp">

                        <EditText
                            android:id="@+id/passwordConfirmarInput"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/confirma_tu_nueva_password"
                            android:inputType="textPassword"
                            android:autofillHints="password"
                            android:paddingStart="12dp"
                            android:paddingEnd="40dp"
                            android:textColor="@color/text_primary"
                            android:textColorHint="@color/text_muted"
                            android:textSize="14sp"
                            android:background="@drawable/rounded_edittext" />

                        <ImageView
                            android:id="@+id/passwordConfirmarToggle"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical|end"
                            android:padding="8dp"
                            android:src="@drawable/ic_visibility_off"
                            android:contentDescription="@string/mostrar_ocultar_contrasena"
                            app:tint="@color/icon" />

                    </FrameLayout>

                    <!-- Requisitos de password -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/requisitos"
                        style="@style/TextBody"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/req_minimo8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/minimo_8_caracteres"
                        style="@style/TextBody"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_mayuscula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/al_menos_1_mayuscula"
                        style="@style/TextBody"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_minuscula"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/al_menos_1_minuscula"
                        style="@style/TextBody"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_numero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/al_menos_1_numero"
                        style="@style/TextBody"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/req_especial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/al_menos_1_caracter_especial_amp"
                        style="@style/TextBody"
                        android:layout_marginBottom="16dp" />

                    <!-- Boton Guardar -->
                    <Button
                        android:id="@+id/guardarPasswordButton"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/guardar_password" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>