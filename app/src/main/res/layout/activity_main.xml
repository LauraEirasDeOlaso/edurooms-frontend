<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Contenedor de scroll para el contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/edurooms"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="18sp" />

            <!-- BOTONES PARA PROFESOR Y ADMIN -->

            <Button
                android:id="@+id/verAulasButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:text="@string/ver_aulas_disponibles"
                android:textSize="16sp" />

            <Button
                android:id="@+id/misReservasButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:text="@string/mis_reservas"
                android:textSize="16sp" />

            <Button
                android:id="@+id/incidenciasButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:text="@string/reportar_incidencia"
                android:textSize="16sp" />

            <!-- BOTONES SOLO PARA ADMIN (ocultos por defecto) -->
            <Button
                android:id="@+id/crearAulaButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:text="@string/crear_aula"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/eliminarAulaButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:text="@string/eliminar_aula"
                android:textSize="16sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/gestionarUsuariosButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:text="@string/gestionar_usuarios"
                android:textSize="16sp"
                android:visibility="gone" />

            <!-- BOTÓN CERRAR SESIÓN (para todos) -->
            <Button
                android:id="@+id/cerrarSesionButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#FF6B6B"
                android:text="@string/cerrar_sesi_n"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (fija abajo) -->
    <include layout="@layout/layout_bottom_nav" />
</LinearLayout>