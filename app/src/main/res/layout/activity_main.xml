<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- AppBar/Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- Contenedor de scroll para el contenido principal -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:gravity="center">


            <!-- BOTONES PARA PROFESOR Y ADMIN -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/verAulasButton"
                style="@style/ButtonMainMenu"
                android:text="@string/ver_aulas_disponibles" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/misReservasButton"
                style="@style/ButtonMainMenu"
                android:text="@string/mis_reservas" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/incidenciasButton"
                style="@style/ButtonMainMenu"
                android:text="@string/reportar_incidencia"/>

            <!-- BOTONES SOLO PARA ADMIN (ocultos por defecto) -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/gestionarAulasButton"
                style="@style/ButtonMainMenu"
                android:text="@string/gestionar_aulas"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/gestionarUsuariosButton"
                style="@style/ButtonMainMenu"
                android:text="@string/gestionar_usuarios"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/gestionarReservasButton"
                style="@style/ButtonMainMenu"
                android:text="@string/gestionar_reservas"
                android:visibility="gone" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/gestionarIncidenciasButton"
                style="@style/ButtonMainMenu"
                android:text="@string/gestionar_incidencias"
                android:visibility="gone"/>

            <!-- BOTÓN CERRAR SESIÓN (para todos) -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:id="@+id/cerrarSesionButton"
                style="@style/ButtonDanger"
                android:text="@string/cerrar_sesi_n" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (fija abajo) -->
    <include layout="@layout/layout_bottom_nav" />
</LinearLayout>