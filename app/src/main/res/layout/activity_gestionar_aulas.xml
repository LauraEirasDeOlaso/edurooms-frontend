<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar -->
    <include layout="@layout/toolbar" />

    <!-- Encabezado con FAB superpuesto -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/gestionar_aulas"
            style="@style/TextHeading1" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/crearAulaFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/baseline_add_24"
            android:contentDescription="@string/crear_aula"
            app:fabSize="mini"
            app:backgroundTint="@color/primary" />

    </FrameLayout>


    <!-- RecyclerView de Aulas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/aulasRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp" />

    <!-- Bottom Navigation -->
    <include layout="@layout/layout_bottom_nav" />

</LinearLayout>